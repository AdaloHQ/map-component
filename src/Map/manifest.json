{
  "displayName": "Map",
  "icon": "./icon.png",
  "defaultWidth": 600,
  "defaultHeight": 232,
  "props": [
    {
      "name": "apiKey",
      "displayName": "Google Maps API Key",
      "type": "text"
    }
  ],
  "childComponents": [
    {
      "name": "markers",
      "displayName": "Markers",
      "props": [
        {
          "name": "markerType",
          "displayName": "Display markers for...",
          "type": "text",
          "default": "all",
          "control": {
            "type": "menu",
            "options": [
              { "label": "All restaurants", "value": "all" }
            ]
          }
        },
        {
          "name": "markerAddress",
          "displayName": "Marker Address",
          "type": "text"
        },
        {
          "name": "lat",
          "displayName": "Latitude",
          "type": "number"
        },
        {
          "name": "lng",
          "displayName": "Longitude",
          "type": "number"
        },
        {
          "name": "markerTitle",
          "displayName": "Marker Title",
          "type": "text"
        },
        {
          "name": "markerSubtitle",
          "displayName": "Marker Subtitle",
          "type": "text"
        },
        {
          "name": "markerImage",
          "displayName": "Marker Image",
          "type": "image"
        },
        {
          "name": "onPress",
          "displayName": "Click Actions",
          "type": "action"
        }
      ]
    },
    {
      "name": "style",
      "displayName": "Style",
      "props": [
        {
          "name": "mapStyle",
          "displayName": "Map Style",
          "type": "text",
          "default": "roadmap",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Roadmap", "value": "roadmap" },
              { "label": "Hybrid", "value": "hybrid" },
              { "label": "Satellite", "value": "satellite" },
              { "label": "Terrain", "value": "terrain" }
            ]
          }
        },
        {
          "name": "customStyle",
          "displayName": "Custom Style JSON",
          "type": "text",
          "placeholder": "Paste JSON..."
        }
      ]
    }
  ]
}
