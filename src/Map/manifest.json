{
  "displayName": "Map",
  "icon": "./icon.png",
  "defaultWidth": 600,
  "defaultHeight": 232,
  "resizeY": true,
  "props": [
    {
      "name": "apiKey",
      "displayName": "Google Maps API Key",
      "type": "text",
      "global": true,
      "helpText": "Get your API Key [here](https://help.adalo.com/component-basics/marketplace-components/maps)"
    },
    {
      "name": "markerType",
      "displayName": "Number of Markers",
      "type": "text",
      "default": "simple",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Single Marker", "value": "simple" },
          { "label": "Multiple Markers", "value": "multiple" }
        ]
      }
    },
    {
      "name": "markerCollection",
      "displayName": "Marker Collection",
      "type": "list",
      "enabled": { "markerType": "multiple" }
    }
  ],
  "childComponents": [
    {
      "name": "markers",
      "displayName": "Markers",
      "enabled": { "markerType": "simple" },
      "props": [
        {
          "name": "markerAddress",
          "displayName": "Marker Address",
          "type": "text"
        },
        {
          "name": "markerSource",
          "displayName": "Marker Image",
          "type": "text",
          "default": "default",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Default", "value": "default" },
              { "label": "Custom", "value": "custom" }
            ]
          }
        },
        {
          "name": "markerImage",
          "displayName": "Marker Image",
          "type": "image",
          "enabled": { "markerSource": "custom" }
        },
        {
          "name": "onPress",
          "displayName": "Click Actions",
          "type": "action"
        }
      ]
    },
    {
      "name": "markers_list",
      "displayName": "Markers",
      "role": "listItem",
      "reference": "markerCollection",
      "enabled": { "markerType": "multiple" },
      "props": [
        {
          "name": "markerAddress",
          "displayName": "Marker Address",
          "type": "text"
        },
        {
          "name": "markerSource",
          "displayName": "Marker Source",
          "type": "text",
          "default": "default",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Default", "value": "default" },
              { "label": "Custom", "value": "custom" }
            ]
          }
        },
        {
          "name": "listMarkerImage",
          "displayName": "Marker Image",
          "type": "image",
          "enabled": { "markerSource": "custom" }
        },
        {
          "name": "onPress",
          "displayName": "Click Actions",
          "type": "action"
        }
      ]
    },
    {
      "name": "style",
      "displayName": "Style",
      "props": [
        {
          "name": "mapStyle",
          "displayName": "Map Style",
          "type": "text",
          "default": "roadmap",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Roadmap", "value": "roadmap" },
              { "label": "Hybrid", "value": "hybrid" },
              { "label": "Satellite", "value": "satellite" },
              { "label": "Terrain", "value": "terrain" }
            ]
          }
        },
        {
          "name": "customStyle",
          "displayName": "Custom Style JSON",
          "type": "text",
          "placeholder": "Paste JSON...",
          "disableDynamicValues": true,
          "helpText": "Learn more about customizing your map [here](https://help.adalo.com/component-basics/maps#customizing-the-maps-with-with-json)"
        },
        {
          "name": "currentLocation",
          "displayName": "Show Current Location",
          "type": "boolean"
        }
      ]
    }
  ]
}
